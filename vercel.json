{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/bot/action(.*)",
      "destination": "/api/bot/action.js"
    },
    {
      "source": "/api/bot/status(.*)",
      "destination": "/api/bot/status.js"
    },
    {
      "source": "/api/bot/logs/stream(.*)",
      "destination": "/api/bot/logs.js"
    },
    {
      "source": "/api/bot/logs(.*)",
      "destination": "/api/bot/logs.js"
    },
    {
      "source": "/api/settings(.*)",
      "destination": "/api/bot/settings.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
